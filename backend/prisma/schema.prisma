generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id          Int      @id @default(autoincrement())
  name        String
  code        String   @unique // Auto-generated company code
  email       String   @unique
  phone       String?
  logo        String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  users       User[]
}

model User {
  id          Int       @id @default(autoincrement())
  userId      String?   @unique // Auto-generated user ID
  name        String
  email       String    @unique
  password    String?   // null until user sets password (invited users)
  role        Role      @default(EMPLOYEE)
  isVerified  Boolean   @default(false)
  companyId   Int?
  createdAt   DateTime  @default(now())
  company     Company?  @relation(fields: [companyId], references: [id])
  employee    Employee?
  EmailTokens EmailToken[]
  EmailLogs   EmailLog[]
}

enum Role {
  ADMIN
  HR
  PAYROLL
  EMPLOYEE
}

model Employee {
  id                        Int         @id @default(autoincrement())
  userId                    Int         @unique
  employeeCode              String
  department                String
  designation               String
  baseSalary                Float
  allowances                Float       @default(0)
  pfApplicable              Boolean     @default(true)
  professionalTaxApplicable Boolean     @default(true)
  joinDate                  DateTime
  managerId                 Int?
  status                    String      @default("ACTIVE")
  // Personal Info
  dateOfBirth               DateTime?
  address                   String?
  permanentAddress          String?
  city                      String?
  state                     String?
  zipCode                   String?
  country                   String?     @default("India")
  gender                    String?
  nationality               String?     @default("Indian")
  maritalStatus             String?
  phone                     String?
  alternatePhone            String?
  personalEmail             String?
  emergencyContactName      String?
  emergencyContactPhone     String?
  emergencyContactRelation  String?
  emergencyContactAddress   String?
  // Government IDs
  aadharNumber              String?
  panNumber                 String?
  passportNumber            String?
  drivingLicenseNumber      String?
  voterIdNumber             String?
  // Professional Info
  workLocation              String?
  reportingManager          String?
  workType                  String?     // FULL_TIME, PART_TIME, CONTRACT, INTERN
  probationPeriod           Int?        // in months
  confirmationDate          DateTime?
  previousCompany           String?
  previousDesignation       String?
  totalExperience           Float?      // in years
  // Bank Details
  bankAccountNumber         String?
  bankName                  String?
  bankBranch                String?
  ifscCode                  String?
  accountHolderName         String?
  accountType               String?     // SAVINGS, CURRENT, etc.
  upiId                     String?
  // Additional Financial
  pfNumber                  String?
  uanNumber                 String?     // Universal Account Number
  esiNumber                 String?     // Employee State Insurance
  // Files & Documents
  resumePath                String?
  profilePicturePath        String?
  aadharFilePath            String?
  panFilePath               String?
  bankPassbookPath          String?
  // Health & Benefits
  bloodGroup                String?
  medicalConditions         String?
  insuranceNominee          String?
  insuranceNomineeRelation  String?
  // Relations
  manager                   Employee?   @relation("EmployeeManager", fields: [managerId], references: [id])
  subordinates              Employee[]  @relation("EmployeeManager")
  attendance                Attendance[]
  timeOff                   TimeOff[]
  payrunLines               PayrunLine[]
  skills                    Skill[]
  certifications            Certification[]
  user                      User        @relation(fields: [userId], references: [id])
  createdAt                 DateTime    @default(now())
  updatedAt                 DateTime    @updatedAt
}

model Skill {
  id           Int      @id @default(autoincrement())
  employeeId   Int
  name         String
  proficiency  String   // Beginner, Intermediate, Advanced, Expert
  employee     Employee @relation(fields: [employeeId], references: [id])
  createdAt    DateTime @default(now())
}

model Certification {
  id           Int       @id @default(autoincrement())
  employeeId   Int
  name         String
  issueDate    DateTime
  validityDate DateTime?
  employee     Employee  @relation(fields: [employeeId], references: [id])
  createdAt    DateTime  @default(now())
}

model Department {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int?
  message   String
  type      String   // INFO, WARNING, SUCCESS, ERROR
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model ReportLog {
  id          Int      @id @default(autoincrement())
  generatedBy Int
  type        String   // ATTENDANCE, PAYROLL, LEAVE
  filePath    String?
  createdAt   DateTime @default(now())
}

model Attendance {
  id         Int       @id @default(autoincrement())
  employeeId Int
  date       DateTime
  checkIn    DateTime?
  checkOut   DateTime?
  totalHours Float?
  status     String
  employee   Employee  @relation(fields: [employeeId], references: [id])
  createdAt  DateTime  @default(now())

  @@unique([employeeId, date])
}

model TimeOff {
  id         Int       @id @default(autoincrement())
  employeeId Int
  fromDate   DateTime
  toDate     DateTime
  type       String
  reason     String
  status     String    @default("PENDING") // PENDING/APPROVED/REJECTED
  approverId Int?      // user id of approver (HR or Payroll)
  employee   Employee  @relation(fields: [employeeId], references: [id])
  createdAt  DateTime  @default(now())
}

model Payrun {
  id              Int         @id @default(autoincrement())
  periodStart     DateTime
  periodEnd       DateTime
  status          String      @default("DRAFT") // DRAFT / FINALIZED
  createdBy       Int
  payrunLines     PayrunLine[]
  totalGross      Float?
  totalDeductions Float?
  totalNet        Float?
  createdAt       DateTime    @default(now())
}

model PayrunLine {
  id              Int      @id @default(autoincrement())
  payrunId        Int
  employeeId      Int
  gross           Float
  unpaidDeduction Float
  pfEmployee      Float
  professionalTax Float
  otherDeductions Float
  net             Float
  remarks         String?
  payrun          Payrun   @relation(fields: [payrunId], references: [id])
  employee        Employee @relation(fields: [employeeId], references: [id])
  payslip         Payslip?
}

model Payslip {
  id           Int        @id @default(autoincrement())
  payrunLineId Int        @unique
  filePath     String
  generatedAt  DateTime   @default(now())
  payrunLine   PayrunLine @relation(fields: [payrunLineId], references: [id])
}

model EmailToken {
  id        Int      @id @default(autoincrement())
  userId    Int
  tokenHash String   // store hashed token
  type      String   // INVITE | VERIFY | RESET
  expiresAt DateTime
  used      Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model EmailLog {
  id        Int      @id @default(autoincrement())
  userId    Int?
  toEmail   String
  subject   String
  template  String
  status    String   // SENT | FAILED
  error     String?
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int?
  role      String?
  action    String
  details   String?
  timestamp DateTime @default(now())
}